<h1> Schools </h1>
<h6> <%= link_to "<<", "/organizations/list/#{@page -1}" unless @page == 1%>  <%= "Page #{@page}" %> <%= link_to ">>", "/organizations/list/#{@page +1}" unless @organizations.length < 10 %></h6>


<nav>
  <ul class="pagination">
    <li class=<%= "disabled" if @page == 1 %>>
      <a href= "/organizations/list/<%= (@page -1)  unless @page == 1 %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="active"><a href="">Page <%= @page %> </a></li>
    <li>
      <a href="/organizations/list/<%= @page +1 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" >  <thead>
    <tr>
      <th>School</th>
      <th>Staff</th>
      <th>Edubase Headteacher</th>
    </tr>
  </thead>
<tbody>
<% @organizations.each do |organization| %>
<tr>
  <td><%= link_to(organization.name, organization_path(organization.id)) %></td>
  <td>
    <% organization.posts.each do |p| %>
      <% if p.end_date == nil %>
        <p><%= p.person.title %> <%= p.person.first_name %> <%= p.person.last_name %> <%= "(#{p.job_title})" %></p>
      <% end %>
    <% end %>
  </td>
  <td id="headteacher">
    <input type="hidden" class="organization-id" value="<%= organization.id %>">
    <img src="http://www.turismoinliguria.it/images/loader.gif" alt="">
  </td>
</tr>
<% end %>


</tbody>
</table>
</div>
