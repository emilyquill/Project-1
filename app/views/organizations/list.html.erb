<h1> Schools </h1>

<nav>
  <ul class="pagination">
      <%  if @page > 1 %>
        <li>
          <a href= "/organizations/list/<%= (@page -1) %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      <% else %>
        <li class="disabled">
          <a href= "" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      <% end %>
    <li class="active"><a href="">Page <%= @page %> </a></li>
    <li>
      <a href="/organizations/list/<%= @page +1 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" >  <thead>
    <tr>
      <th class="col-sm-5">School</th>
      <th class="col-sm-4">Staff</th>
      <th class="col-sm-3">Edubase Headteacher</th>
    </tr>
  </thead>
<tbody>
<% @organizations.each do |organization| %>
<tr>
  <td><%= link_to(organization.name, organization_path(organization.id)) %></td>
  <td>
    <% organization.posts.each do |p| %>
      <% if p.end_date == nil %>
        <p><%= p.person.title %> <%= p.person.first_name %> <%= p.person.last_name %> <%= "(#{p.job_title})" %></p>
      <% end %>
    <% end %>
  </td>
  <td id="headteacher">
    <input type="hidden" class="organization-id" value="<%= organization.id %>">
    <img id="loading" src="http://www.turismoinliguria.it/images/loader.gif" alt="">
  </td>
</tr>
<% end %>


</tbody>
</table>
</div>
