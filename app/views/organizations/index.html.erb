<h1> Schools </h1>
<div class="ibox-content">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTables-directory" >  <thead>
    <tr>
      <th>School</th>
      <th>Staff</th>
      <th>Edubase Headteacher</th>
    </tr>
  </thead>
<tbody>
<% @organizations.each do |organization| %>
<tr>
  <td><%= link_to(organization.name, organization_path(organization.id)) %></td>
  <td>
    <% organization.posts.each do |p| %>
  <% if p.end_date == nil %>
    <p><%= p.person.title %> <%= p.person.first_name %> <%= p.person.last_name %> ( <%= p.job_title %> )</p>
  <% end %>
<% end %>
  </td>
  <td>TBC</td>
</tr>

<% end %>
</tbody>
</table>
</div>
</div>
